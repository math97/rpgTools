generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Type {
  STRENGTH
  DEXTERITY
  CONSTITUTION
  INTELLIGENCE
  WISDOM
  CHARISMA
}

enum ArmorClass {
  LIGHT
  MEDIUM
  HEAVY
}

enum Size {
  TINY
  SMALL
  MEDIUM
  LARGE
  HUGE
  GARGANTUAN
}

model Guild {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  guildId     String
  description String?
  HomeBrew    HomeBrew[]
}

model HomeBrew {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  guildId     String @db.ObjectId
  guild       Guild  @relation(fields: [guildId], references: [id])
  races       Race[]
}

model Race {
  id                  String         @id @default(auto()) @map("_id") @db.ObjectId
  name                String         @unique
  languages           String[]
  movementSpeed       Float
  traits              String[]
  proficienciesNumber Int
  proficiencies       String[]
  abilityScore        AbilityScore[]
  armorClass          ArmorClass[]
  size                Size
  HomeBrew            HomeBrew?      @relation(fields: [homeBrewId], references: [id])
  homeBrewId          String?        @db.ObjectId
}

model AbilityScore {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  type   Type    @unique
  value  Int
  Race   Race?   @relation(fields: [raceId], references: [id])
  raceId String? @db.ObjectId
}

model Levels {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  level           Int
  proficiency     Int
  features        String[]
  spellSlots      Int[]
  cantrips        Int[]
  martialArtsDice String
  ki              Int?
  fury            Int?
  furyDamage      Int?
}

model Role {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  image         String
  className     String   @unique
  hitDie        Int
  proficiencies String[]
  savingThrows  String[]
  skills        String[]
}
